{
  "name": "@chardetm/web-ide",
  "author": "Maverick Chardet",
  "description": "A simple web development IDE with teacher/student features to teach HTML, CSS and Javascript.",
  "license": "CC-BY-SA-4.0",
  "private": false,
  "version": "0.7.5",
  "type": "module",
  "main": "dist/web-ide.umd.cjs",
  "module": "dist/web-ide.js",
  "typings": "dist/web-ide.d.ts",
  "exports": {
    ".": {
      "import": "./dist/web-ide.js",
      "require": "./dist/web-ide.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "builddev": "tsc && vite build -m development",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.6",
    "@codemirror/lang-python": "^6.1.3",
    "@codemirror/language": "^6.9.2",
    "@codemirror/language-data": "^6.3.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "^5.14.16",
    "@mui/lab": "^5.0.0-alpha.155",
    "@mui/material": "^5.14.16",
    "@uiw/react-codemirror": "^4.21.20",
    "client-zip": "^2.4.4",
    "codemirror-readonly-ranges": "^0.1.0-alpha.1",
    "file-saver": "^2.0.5",
    "mime": "^3.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/mime": "^3.0.1",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-html-props": "^2.0.3",
    "sass": "^1.56.1",
    "tslib": "^2.6.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.5.4"
  }
